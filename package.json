{
  "name": "@marko/webpack",
  "description": "a Marko plugin and loader for Webpack",
  "version": "1.0.1-2",
  "bugs": "https://github.com/marko-js/@marko/webpack/issues",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/webpack": "^4.4.25",
    "coveralls": "^3.0.2",
    "css-loader": "^2.1.0",
    "del": "^3.0.0",
    "escape-string-regexp": "^1.0.5",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "marko": "^4.15.2",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.5.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "prettier": "^1.15.3",
    "style-loader": "^0.23.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.29.5"
  },
  "peerDependencies": {
    "webpack": "^4",
    "marko": "^4"
  },
  "files": [
    "dist",
    "loader.js",
    "plugin.js"
  ],
  "homepage": "https://github.com/marko-js/@marko/webpack",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test && npm run build"
    }
  },
  "keywords": [
    "marko",
    "webpack",
    "loader",
    "plugin"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -t codeFrame -c tslint.json",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/@marko/webpack"
  },
  "scripts": {
    "build": "tsc",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "nyc --extension=.ts --include=src/**/*.ts --reporter=lcovonly --reporter=text npm run mocha",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && tslint -t codeFrame -c tslint.json '{src,test}/**/*.ts'",
    "mocha": "mocha --require ts-node/register ./test/**/*.test.ts",
    "mocha:watch": "npm run mocha -- --recursive --watch --watch-extensions=js,ts",
    "test": "nyc --extension=.ts --include=src/**/*.ts --reporter=lcov --reporter=text-summary npm run mocha"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "base-x": "^3.0.5",
    "lasso-modules-client": "^2.0.5",
    "loader-utils": "^1.2.3"
  }
}
